<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity_learningbranch">

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="wrap_content"
        android:layout_height="267dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/branch_actionbar2" />

    <TextView
        android:id="@+id/branch_text"
        android:layout_width="233dp"
        android:layout_height="85dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:text="LEARNING BRANCHES"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.089" />

    <ImageButton
        android:id="@+id/branch1_button"
        android:layout_width="300dp"
        android:layout_height="175dp"
        android:background="#0003DAC5"
        android:scaleType="fitXY"
        android:src="@drawable/branch_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/branch_text"
        app:layout_constraintVertical_bias="0.093" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="171dp"
        android:layout_height="165dp"
        android:rotationY="180"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/branch1_button"
        app:layout_constraintEnd_toEndOf="@+id/branch1_button"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/branch1_button"
        app:layout_constraintTop_toTopOf="@+id/branch1_button"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/branch_testbg" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:rotationY="180"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/branch1_button"
        app:layout_constraintEnd_toEndOf="@+id/branch1_button"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/branch1_button"
        app:layout_constraintTop_toTopOf="@+id/branch1_button"
        app:layout_constraintVertical_bias="0.19999999"
        app:srcCompat="@drawable/branch_testbg" />

    <ImageButton
        android:id="@+id/branch_close_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#00000000"
        android:src="@android:drawable/ic_lock_power_off"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.958"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <ImageButton
        android:id="@+id/branch_home_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#00000000"
        android:scaleType="centerInside"
        android:src="@drawable/back"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="134dp"
        android:layout_height="29dp"
        android:fontFamily="sans-serif-black"
        android:text="CLASSICAL"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/branch1_button"
        app:layout_constraintEnd_toEndOf="@+id/branch1_button"
        app:layout_constraintHorizontal_bias="0.91"
        app:layout_constraintStart_toStartOf="@+id/branch1_button"
        app:layout_constraintTop_toTopOf="@+id/branch1_button"
        app:layout_constraintVertical_bias="0.732" />

    <TextView
        android:id="@+id/textView43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="MECHANICS"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/branch1_button"
        app:layout_constraintEnd_toEndOf="@+id/branch1_button"
        app:layout_constraintHorizontal_bias="0.929"
        app:layout_constraintStart_toStartOf="@+id/branch1_button"
        app:layout_constraintTop_toBottomOf="@+id/textView38"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>